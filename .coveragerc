# Coverage.py configuration file

[run]
# Source files to measure
source =
    socratic_system
    socrates_cli
    socrates_api

# Files to omit
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */site-packages/*
    setup.py
    conftest.py

# Branch coverage
branch = True

# Parallel coverage
parallel = True

# Concurrency
concurrency = multiprocessing

[report]
# Exclude certain code
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod
    pass
    except ImportError:
    except ModuleNotFoundError:

# Precision for percentages
precision = 2

# Show missing lines
show_missing = True

# Sort by coverage
sort = Cover

[html]
# HTML report directory
directory = htmlcov

[xml]
# XML report output
output = coverage.xml

[json]
# JSON report output
output = coverage.json
