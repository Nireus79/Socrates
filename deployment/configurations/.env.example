# Socrates Configuration

# Claude API
CLAUDE_API_KEY=sk-your-key-here
CLAUDE_MODEL=claude-haiku-4-5-20251001

# Database
DATABASE_URL=sqlite:///./socrates.db
# For production use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/socrates_db

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Server Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
WORKERS=4

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# GitHub Integration
GITHUB_TOKEN=ghp_your-github-token
GITHUB_API_TIMEOUT=30

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-password
EMAIL_FROM=noreply@socrates.local

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24
ENCRYPTION_KEY=your-encryption-key-here

# File Storage
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
GENERATED_PROJECTS_DIR=/app/generated

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=

# Logging
LOG_FILE=/app/logs/socrates.log
LOG_DIR=/app/logs
JSON_LOGS=false

# Application Settings
SESSION_TIMEOUT=3600
MAX_PROJECT_SIZE=1000000000  # 1GB in bytes
MAX_CONCURRENT_GENERATIONS=5

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Feature Flags
ENABLE_GITHUB_PUBLISHING=true
ENABLE_DOCKER_EXPORT=true
ENABLE_KUBERNETES_EXPORT=false
ENABLE_ANALYTICS=true
